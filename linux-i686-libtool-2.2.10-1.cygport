CROSS_HOST="i686-pc-linux-gnu"
ORIG_PN="libtool"
inherit cross

DESCRIPTION="libtool/libltdl for Linux i686 toolchain"
HOMEPAGE="http://www.gnu.org/software/libtool/"
case $((${PV[3]%[a-z]} % 2)) in
1)	SRC_URI="http://pogma.com/libtool/${P}.tar.gz" ;;
0)	SRC_URI="mirror://gnu/libtool/${ORIG_PN}-${PV}.tar.lzma" ;;
esac

src_compile() {
	cd ${B}
	cygconf
	cygmake -j1
}

src_install() {
	cd ${B}
	cyginstall

	dotool libtool
}
